#include <iostream>
using namespace std;

int main() {
    int opcion;
    double saldo = 1000.0, retiro;

    cout << "1. Consultar saldo\n2. Retirar dinero\n3. Salir\n";
    cout << "Seleccione una opción: ";
    cin >> opcion;

    switch(opcion) {
        case 1:
            cout << "Saldo actual: $" << saldo << endl;
            break;
        case 2:
            cout << "Ingrese monto a retirar: ";
            cin >> retiro;
            if(retiro <= saldo) {
                saldo -= retiro;
                cout << "Retiro exitoso. Saldo restante: $" << saldo << endl;
            } else {
                cout << "Fondos insuficientes." << endl;
            }
            break;
        case 3:
            cout << "Gracias por usar el cajero." << endl;
            break;
        default:
            cout << "Opción no válida." << endl;
    }
    return 0;
}
