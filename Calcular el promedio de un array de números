#include <iostream>
using namespace std;

double promedio(int arr[], int size) {
    int suma = 0;
    for(int i = 0; i < size; i++) {
        suma += arr[i];
    }
    return (double)suma / size;
}

int main() {
    int numeros[] = {10, 20, 30, 40, 50};
    int tam = sizeof(numeros)/sizeof(numeros[0]);
    cout << "Promedio: " << promedio(numeros, tam) << endl;
    return 0;
}
